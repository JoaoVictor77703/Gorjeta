<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuGorjetaActivity"
    android:gravity="center"
    android:background="#111">


    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="450dp"
        app:cardCornerRadius="30dp"
        android:backgroundTint="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comanda / Gorgeta"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="#111"
            android:layout_margin="20dp"
            android:drawableLeft="@drawable/money"
            android:drawableRight="@drawable/money"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#111"/>

        <EditText
            android:id="@+id/Valorcomanda"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="20dp"
            android:hint="Comanda :" />


        <Spinner
            android:id="@+id/spinneravalia"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:entries="@array/avalia"/>

        <Button
            android:id="@+id/btncaucula"
            style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
            android:backgroundTint="#040404"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Caucular Gorgeta"
            android:textColor="#fff"
            android:layout_marginTop="20dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#111"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

        <EditText
            android:layout_margin="10dp"
            android:id="@+id/gorjeta1"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:hint="Gorjeta :" />
        <EditText
            android:layout_margin="10dp"
            android:id="@+id/total"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:hint="Total :" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
</RelativeLayout>